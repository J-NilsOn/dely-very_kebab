<script type="text/javascript">
  ymaps.ready(init);

  function init() {

    myMap = new ymaps.Map('map', {
      center: [59.92, 30.35],
      zoom: 11
    }, {
      searchControlProvider: 'yandex#search'
    });

    document.getElementById('destroyButton').onclick = function () {
      // Для уничтожения используется метод destroy.
      myMap.destroy();
    };

  }
</script>

